if [[ "$SPIN" = 1 ]]
then
  # Only run nested steps in Spin + shopify/shopify workspaces.
  if [[ "$SPIN_REPO_SOURCE_PATH" = "/src/github.com/shopify/shopify" || "$SPIN_REPO_SOURCE_PATH" = "/src/github.com/shopify/web" ]]
  then
    cd "$SPIN_REPO_SOURCE_PATH"
    cartridge insert thetrevorharmon/setup-shopify-config
    . /cartridges/setup-shopify-config/setup.sh/setup.sh

    restart
  fi
fi
